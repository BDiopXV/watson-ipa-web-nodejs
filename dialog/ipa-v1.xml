<?xml version="1.0" encoding="UTF-8"?>
<dialog xsi:noNamespaceSchemaLocation="WatsonDialogDocument_1.0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <flow>
        <folder label="Main">
            <output>
                <prompt>
                    <item>Hello, how can I help you?</item>
                </prompt>
                <goto ref="processUserRequest"/>
            </output>
            <output ref="processNextUserRequest">
                <prompt>
                    <item>How else can I help you today?</item>
                </prompt>
                <getUserInput id="processUserRequest">
                    <search ref="action_meeting_create_folder"/>
                    <default>
                        <output>
                            <prompt selectionType="RANDOM">
                                <item>I'm sorry I did not understand your question, please try again.</item>
                            </prompt>
                        </output>
                    </default>
                </getUserInput>
            </output>
        </folder>
        <folder label="Library">
            <folder label="Live Content" id="action_meeting_create_folder">
                <input>
                    <grammar>
                        <item>intentMeeting $</item>
                    </grammar>
                    <goto ref="output_invite_who"/>
                </input>
                <input>
                    <grammar>
                        <item>itentEmail $</item>
                    </grammar>
                    <goto ref="output_invite_who"/>
                </input>
                <input>
                    <grammar>
                        <item>intentSms $</item>
                    </grammar>
                    <action varName="var_invite_type" operator="SET_TO">""</action>
                    <goto ref="output_invite_who"/>
                </input>
            </folder>
            <folder id="invite_who">
                <output id="output_invite_who">
                    <prompt>
                        <item>Who should I invite to your meeting?</item>
                    </prompt>
                    <getUserInput>
                        <input>
                            <grammar>
                                <item>$ (contact_friends)={var_invite_attendee1}</item>
                            </grammar>
                            <action varName="var_invite_attendee1" operator="SET_TO">{var_invite_attendee1.value:main}</action>
                            <output>
                                <prompt>
                                    <item>I'll invite {var_invite_attendee1}.</item>
                                </prompt>
                                <goto ref="output_invite_time"/>
                            </output>
                        </input>
                        <input>
                            <grammar>
                                <item>$ (contact_family)={var_invite_attendee1}</item>
                            </grammar>
                            <action varName="var_invite_attendee1" operator="SET_TO">{var_invite_attendee1.value:main}</action>
                            <output>
                                <prompt>
                                    <item>I'll invite your {var_invite_attendee1}.</item>
                                </prompt>
                                <goto ref="output_invite_time"/>
                            </output>
                        </input>
                        <output>
                            <prompt>
                                <item>I can't find that person in your contacts.</item>
                            </prompt>
                            <goto ref="output_invite_who"/>
                        </output>
                    </getUserInput>
                </output>
            </folder>
            <folder label="Invite Time">
                <output id="output_invite_time">
                    <prompt>
                        <item>What time is your meeting?</item>
                    </prompt>
                    <getUserInput>
                        <input>
                            <grammar>
                                <item>$ (DATE_TIME_RANGE)={var_invite_time}</item>
                            </grammar>
                            <action varName="var_invite_time" operator="SET_TO">{var_invite_time.value:FROM_TIME}</action>
                            <goto ref="output_invite_date"/>
                        </input>
                        <output>
                            <prompt>
                                <item>I'll need a valid time to continue.</item>
                            </prompt>
                            <goto ref="output_invite_time"/>
                        </output>
                    </getUserInput>
                </output>
            </folder>
            <folder label="Meeting Date">
                <output id="output_invite_date">
                    <prompt>
                        <item>What is the date for your meeting?</item>
                    </prompt>
                    <getUserInput>
                        <input>
                            <grammar>
                                <item>$ (DATE_TIME_RANGE)={var_invite_date}</item>
                            </grammar>
                            <action varName="var_invite_date" operator="SET_TO">{var_invite_date.value:FROM_DATE}</action>
                            <output>
                                <prompt>
                                    <item>
                                        I've invited {var_invite_attendee1} to your meeting at {var_invite_time} on {var_invite_date}.
                                    </item>
                                </prompt>
                                <goto ref="processNextUserRequest"/>
                            </output>
                        </input>
                        <output>
                            <prompt>
                                <item>I'll need a valid date to continue.</item>
                            </prompt>
                            <goto ref="output_invite_date"/>
                        </output>
                    </getUserInput>
                </output>
            </folder>
            <folder label="Storage"/>
        </folder>
        <folder label="Global"/>
        <folder label="Concepts">
            <concept>
                <grammar>
                    <item>IPA</item>
                    <item>Intelligent Agent</item>
                    <item>Intelligent Personal Agent</item>
                </grammar>
            </concept>
        </folder>
    </flow>
    <entities>
        <entity name="contact_friends">
            <value name="Anthony" value="Anthony"/>
            <value name="Kelly" value="Kelly"/>
            <value name="Ryan" value="Ryan"/>
            <value name="Tina" value="Tina"/>
        </entity>
        <entity name="contact_family">
            <value name="mother" value="mother"/>
            <value name="father" value="father"/>
            <value name="wife" value="wife"/>
            <value name="husband" value="husband"/>
            <value name="brother" value="brother"/>
            <value name="sister" value="sister"/>
        </entity>
    </entities>
    <constants>
        <var_folder name="Home">
            <var_folder name="General" type="CONST">
                <var name="IA" type="TAG">Intelligent Agent</var>
            </var_folder>
        </var_folder>
    </constants>
    <variables>
        <var_folder name="Home">
            <var name="var_invite_attendee1" type="TEXT" description="First person to invite to the meeting"/>
            <var name="MeetingAttendee2" type="TEXT" description="Second person to invite to the meeting"/>
            <var name="var_invite_date" type="TEXT" description="Date for the meeting"/>
            <var name="var_invite_time" type="TEXT" description="Time for the meeting"/>
        </var_folder>
    </variables>
